\newcommand{\darmarITpageNoLeft}{%
  \AddToShipoutPicture*{%
    \put(18,-18){\parbox[b][\paperheight]{\paperwidth}{%
        \vfill\hfill\includegraphics{icon_right.png}}}%
    \put(-10,10){\parbox[b][\paperheight]{\paperwidth}{%
        \vfill\hfill\textcolor{white}{\textbf{\textsf{\arabic{page}}}}}}%
  }
}

